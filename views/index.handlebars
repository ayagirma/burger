
<div class = "Jamotron">
  <div class = "container" >
    <div class = "row">
        <div class = "col-md-12 text-center" id="top-bar">
            <img src="/assets/img/burger.jpg" alt ="burger" /> 
            <h1> Eat-Da-Burger! </h1>
        </div>
        <div class="col-md-12 text-center" class = "task">
             <div class = 'row'>
                    {{#each burgers}}
                        {{#unless this.devoured}}
                          <div class="col-md-9 text-center">                          
                            <pre>{{this.id}}. {{this.burger_name}} </pre>
                          </div>
                          <div class="col-md-3 text-center">
                             <form action='/api/burger' method='POST'>
                            <input type='hidden' name='burger' value='true'>
                            <button type='submit' class="btn btn-default">Devour it!</button>
                                    </form>
                           </div>
                        {{/unless}}
                    {{/each}}
                </div>
            </div>

            <div class="col-md-6 text-center" class="task">
                    {{#each burgers}}
                        {{#if this.devoured}}
                            <input class="form-control" type="text" placeholder="{{this.id}}.{{this.burger_name}}" readonly>
                {{/if}}
              {{/each}}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-7 text-center">
        <form class="create-update-form" action="/api/burger" method="POST">
            <div class="form-group">
               <label for="bg">Burger Name:</label>
                <textarea type="text" name="name"></textarea><br>
                <button class="btn btn-default" type="submit">Submit</button>
                <h5 class="text-center">Enter a burger you want to eat and click Submit!</h5>
            </div>
        </form>
    </div>
  </div>

</div>
</div>